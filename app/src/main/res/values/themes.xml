<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BmiCalculatorApp" parent="Theme.Material3.Dark">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BmiCalculatorApp" parent="Base.Theme.BmiCalculatorApp" />

    <style name="ButtonGenderStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="ButtonCircularAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ButtonCircularStyle">
        <item name="android:layout_margin">4dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ButtonCircularAppearance</item>
    </style>

    <style name="TextViewInfoStyle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextViewResultStyle">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewDataInfoStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="SliderStyle">
        <item name="labelBehavior">gone</item>
        <item name="tickVisible">false</item>
        <item name="thumbHeight">32dp</item>
        <item name="android:stepSize">1</item>
    </style>
</resources>